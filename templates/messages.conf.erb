### File managed with puppet ###
### Served by:        '<%= scope.lookupvar('::servername') %>'
### Module:           '<%= scope.to_hash['module_name'] %>'
### Template source:  '<%= template_source %>'

Messages {
  name                    = "<%= @title %>"
<% if !@mailcommand.empty? -%>
  mailcommand             = "<%= @mailcommand %>"
<% end -%>
<% if !@operatorcommand.empty? -%>
  operatorcommand         = "<%= @operatorcommand %>"
<% end -%>
<% @_messages.each do | type, dest, message | -%>
  <%= type %>             = "<%= dest %>" = <%= message %>
<% end -%>
<% if !@mail.empty? %><% @mail.each do | dest, message | -%>
  mail                    = "<%= dest %>" = <%= message %>
<% end %><% end -%>
<% if !@catalog.empty? -%>
  catalog                 = <%= @catalog %>
<% end -%>
}
