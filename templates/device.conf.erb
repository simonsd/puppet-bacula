### File managed with puppet ###
### Served by:        '<%= scope.lookupvar('::servername') %>'
### Module:           '<%= scope.to_hash['module_name'] %>'
### Template source:  '<%= template_source %>'

Device {
  name           = "<%= name %>-sd"
  media type     = "File"
  archive device = "<%= path %>"
  labelmedia     = "yes";
  random access  = "Yes";
  automaticmount = "yes";
  removablemedia = "no";
  alwaysopen     = "no";
}
