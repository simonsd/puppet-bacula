### File managed with puppet ###
### Served by:        '<%= scope.lookupvar('::servername') %>'
### Module:           '<%= scope.to_hash['module_name'] %>'
### Template source:  '<%= template_source %>'

Fileset {
  name = "<%= @name %>"
  include {
    Options {
      signature = MD5
    }
<% @include.each do |incl| -%>
    File = <%= incl %>
<% end -%>
  }
<% if !@exclude.empty? -%>
  exclude {
<% @exclude.each do |excl| -%>
    File = <%= excl %>
<% end -%>
  }
<% end -%>
}
